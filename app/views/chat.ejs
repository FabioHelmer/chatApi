<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />

    <title>Multiroom Chat</title>

    <!-- JQUERY -->
    <script src="js/jquery-2.2.1.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

    <!-- bootstrap - link cdn -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
      integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
      crossorigin="anonymous"
    />

    <!-- estilo -->
    <link href="css/style.css" rel="stylesheet" />

    <script type="text/javascript">
      $(document).ready(function() {
        $("#exibe_chat").click(function() {
          $("#conversa").show();
          $("#participantes").hide();
          ocultaNavbar();
        });

        $("#exibe_participantes").click(function() {
          $("#participantes").show();
          $("#conversa").hide();
          ocultaNavbar();
        });
      });

      function ocultaNavbar() {
        $("#btn_navbar_toggle").attr("class", "navbar-toggle collapsed");
        $("#navbar-collapse-1").attr("class", "navbar-collapse collapse");
        $("#btn_navbar_toggle").attr("aria-expanded", "false");
        $("#navbar-collapse-1").attr("aria-expanded", "false");
      }
    </script>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button
            type="button"
            class="navbar-toggle"
            data-toggle="collapse"
            data-target="#navbar-collapse-1"
            id="btn_navbar_toggle"
          >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <%var user = apelido%>
            <label id="apelido"><%=apelido%></label>
          </a>
        </div>

        <div class="collapse navbar-collapse" id="navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <a href="#" id="exibe_chat">Chat</a>
            </li>
            <li>
              <a href="#" id="exibe_participantes">Participantes</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row conversa" id="conversa">
        <div class="col-md-1"></div>
        <div class="col-md-10" id="dialogo"></div>
        <div class="col-md-1"></div>
      </div>

      <div class="row participantes" id="participantes" style="display:none">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <span class="participante">
            <img src="images/ico_usuario.png" />
          </span>
        </div>
        <div class="col-md-1"></div>
      </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
      <div class="container">
        <div class="panel-body campo-mensagem">
          <div class="col-md-12">
            <div class="input-group">
              <input
                name="message"
                type="text"
                class="form-control"
                placeholder="Mensagem"
              />
              <span class="input-group-btn">
                <button
                  class="btn "
                  type="button"
                  value="<%=apelido%>"
                  id="send"
                >
                  >
                </button>
              </span>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
      integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>

    <script>
      var socket = io("http://fff570b4.ngrok.io/chat");

      socket.on("conect", message => {
        renderNewConects(message);
      });

      $("#send").click(function(event) {
        event.preventDefault();

        var author = $("#apelido").html();
        var message = $("input[name=message]").val();
        if (author.length && message.length) {
          var messageObject = {
            author,
            message
          };
          renderMessage(messageObject);
          socket.emit("sendMessage", messageObject);
        } else {
          swal({
            text: "esperimente digitar algo",
            icon: "warning"
          });
        }
      });

      function renderMessage(message) {
        $("#dialogo").append(
          '<div class = "dialogo"><strong>' +
            message.author +
            "</strong>: " +
            message.message +
            "</div>"
        );
      }
      function renderNewConects(message) {
        $("#dialogo").append(
          '<div class = "dialogo"><strong>' +
            message.apelido +
            message.message +
            "</strong></div>"
        );
      }
      socket.on("receivedMessage", function(message) {
        renderMessage(message);
      });
      socket.on("previuosMessage", messagens => {
        for (message of messagens) {
          renderMessage(message);
        }
      });
    </script>
  </body>
</html>
